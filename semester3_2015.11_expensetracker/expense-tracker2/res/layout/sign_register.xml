<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bg" >

    <!-- Header -->

    <include
        android:id="@+id/register_header"
        layout="@layout/register_header" />



    <LinearLayout
        android:id="@id/edit_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bottom_bar_bg"
        android:gravity="center"
        android:paddingLeft="7dip"
        android:paddingRight="7dip" >

        <Button
            android:id="@+id/reg_sign"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.00"
            android:background="@drawable/ok_states" />

        <Button
            android:id="@+id/reg_cancel"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.00"
            android:background="@drawable/cancel_states" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="21dp"
        android:src="@drawable/interface_password2" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/reg_account"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Your password"
        android:imeOptions="actionNext"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/reg_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/register_header"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/imageView1"
        android:ems="10"
        android:hint="Your name want to use"
        android:imeOptions="actionNext"
        android:inputType="text" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_account"
        android:layout_alignParentLeft="true"
        android:src="@drawable/add_user" />

    <EditText
        android:id="@+id/reg_rep_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_password"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reg_password"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Your password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"  />

    <ImageView
        android:id="@+id/ImageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/reg_rep_password"
        android:layout_toLeftOf="@+id/reg_rep_password"
        android:hint="Repeat your password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:src="@drawable/repeat" />

</RelativeLayout>